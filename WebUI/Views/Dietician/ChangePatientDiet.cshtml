@model WebUI.Models.ChangeDietModel

@{
    ViewBag.Title = "ChangePatientDiet";
    Layout = "~/Views/Shared/_DieticianLayout.cshtml";
}

<h1>Diyeti Güncelle</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PatientId)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-6 d-flex justify-content-end">
                @Html.ActionLink("Anasayfaya Dön", "Index", null, new { @class = "btn btn-warning btn-sm text-white" })
            </div>
        </div>
        <div class="form-group mt-3">
            @Html.LabelFor(model => model.PatientName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.PatientName , new { @readonly = "readonly", @class="form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiseaseName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.DiseaseName, new { @readonly = "readonly", @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DietId, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.DropDownList("DietId", null ,htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DietId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 d-flex justify-content-end">
                <input type="submit" value="Diyeti Güncelle" class="btn btn-success" />
            </div>
        </div>
    </div>
}